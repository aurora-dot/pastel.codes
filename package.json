{
  "name": "pastel.codes",
  "version": "0.0.0",
  "private": true,
  "watch": {
    "build-tailwind": {
      "patterns": [
        "views/"
      ],
      "extensions": "pug"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npx nodemon ./bin/www -e js,pug,sass",
    "start": "npx nodemon ./bin/www -e js,pug,sass",
    "watch-tailwind": "npx npm-watch",
    "build-tailwind": "npx postcss src/tailwind.css -o public/stylesheets/style.css",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write --ignore-path .gitignore .",
    "husky-install": "husky install"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "app-root-path": "^3.0.0",
    "autoprefixer": "^10.3.4",
    "axios": "^1.6.8",
    "cookie-parser": "^1.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^5.2.6",
    "hcaptcha": "^0.0.2",
    "helmet": "^4.6.0",
    "http-errors": "^1.8.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.6.1",
    "npm-watch": "^0.11.0",
    "postcss-cli": "^8.3.1",
    "pug": "^3.0.2",
    "tailwind-hamburgers": "^1.1.1",
    "tailwindcss": "^2.2.15",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@prettier/plugin-pug": "^3.0.0",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,pug}": "prettier --write"
  }
}
